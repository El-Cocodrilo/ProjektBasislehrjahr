:root{
    --red:#ff0000;
    --green:#00ff00;
    --blue:#0000ff;
    --yellow: #ffff00;
}
*{
    font-family:Segoe UI, sans-serif;
}
body{
    margin:0;
}
#question{
    margin-left:25%;
    width:50%;
}
#questionHeader{
    text-align:center;
    max-height:20vh;
}
#questionTitle{
    font-size:70px;
    margin:0;
}
#questionText{
    font-size:20px;
}
.answers{
    display:grid;
    grid-template-columns:1fr 1fr;
    height:80vh;
    grid-template-areas:"ans1 ans2" "ans3 ans4";
}
.answer{
    box-sizing:border-box;
    padding:10px 20px;
    height:40vh;
    width:100%;
    font-size:40px;
}
.answerButton{
    padding:0;
    margin:10px;
    border-style:none;
    background-color:inherit;
}
.answerButton:focus{
    outline:none;
}
#ans1{
    grid-area:ans1;
    background-color:var(--red);
}
#ans2{
    grid-area:ans2;
    background-color:var(--green);
}
#ans3{
    grid-area:ans3;
    background-color:var(--blue);
}
#ans4{
    grid-area:ans4;
    background-color:var(--yellow);
}
